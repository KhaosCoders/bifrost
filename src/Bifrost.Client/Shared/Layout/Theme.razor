@rendermode InteractiveAuto

<FluentDesignTheme StorageName="theme" CustomColor="#FE6A34" Mode="@(GlobalDesign.Luminance == StandardLuminance.LightMode ? DesignThemeModes.Light : DesignThemeModes.Dark)" />

@code {
    [Inject]
    private GlobalState GlobalDesign { get; set; } = default!;

    protected override void OnInitialized()
    {
        GlobalDesign.OnChange += StateHasChanged;
    }
}