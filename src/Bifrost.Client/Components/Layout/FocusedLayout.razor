@inherits LayoutComponentBase

<style>
    html,
    body,
    div.page,
    main,
    article {
        height: 100%
    }
</style>

<div class="page">
    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
